    = stylesheet_link_tag 'application', media: 'all'
    = javascript_include_tag 'application'
    = csrf_meta_tags
  %script{type: 'text/ng-template', id: '/home.html'}
    %h1 ToDoList
  %body{"ng-app" => "ToDoList"}
